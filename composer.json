{
    "name": "osw3/micro-framework",
    "description": "A simple Micro Framework",
    "license": "MIT",
    "version": "1.1",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Arnaud BODEL",
            "email": "contact@osw3.net"
        }
    ],
    "require": {
        "altorouter/altorouter": "^1.2",
        "league/plates": "^3.3",
        "ircmaxell/random-lib": "^1.2",
        "ircmaxell/password-compat": "^1.0",
        "league/url": "^3.3",
        "phpmailer/phpmailer": "^6.0",
        "cocur/slugify": "^3.1",
        "ramsey/uuid": "^3.7.3",
        "somework/composer-symlinks": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "OSW3\\": "osw3/",
            "": "app/"
        },
        "files": [
            "osw3/globals.php"
        ]
    },
    "extra": {
        "somework/composer-symlinks": {
            "symlinks": {
                "vendor/bower/bootstrap/dist/css/bootstrap.css": "web/assets/css/bootstrap.css",
                "vendor/bower/bootstrap/dist/js/bootstrap.js": "web/assets/js/bootstrap.js",
                "vendor/bower/jquery/dist/jquery.js": "web/assets/js/jquery.js",
                "vendor/bower/popper.js/dist/umd/popper.js": "web/assets/js/popper.js",
                "vendor/bower/less/dist/less.js": "web/assets/js/less.js"
            }
        }
    }
}
